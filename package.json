{
  "name": "boilerplate-app",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node start-server.js",
    "client": "node start-client.js",
    "format": "npm-run-all jsformat pyformat",
    "jsformat": "prettier --config ./.prettierrc --write \"{server,client}/src/**/*.{js,jsx,ts,tsx}\"",
    "pyformat": "yapf -r -i -e \"venv/*,node_modules/*\" {server,client}/src/**/*.py"
  }
}
